# MesaRPG - Configuración de Producción
# Copia este archivo a .env y modifica los valores

# Dominio del servidor (obligatorio para SSL)
DOMAIN=tu-dominio.com

# Email para Let's Encrypt (notificaciones de renovación)
LETSENCRYPT_EMAIL=admin@tu-dominio.com

# Modo de ejecución
DEBUG=false
PRODUCTION=true

# Configuración del servidor
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Base de datos (opcional, por defecto usa SQLite)
# DATABASE_URL=postgresql://user:pass@localhost/mesarpg

# Límites
MAX_PLAYERS=8
MAX_CONNECTIONS=100
